# Utiliser l'image officielle Papercups
FROM papercups/papercups:latest

# Variables d'environnement
ENV MIX_ENV=prod
ENV PORT=4000

# Exposer le port
EXPOSE 4000

# Script de démarrage complet avec création DB, migrations et lancement
CMD ["/bin/sh", "-c", "sleep 5 && /entrypoint.sh db createdb && /entrypoint.sh db migrate && /entrypoint.sh run"]
